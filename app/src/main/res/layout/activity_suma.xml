<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/teal">

    <!-- Puntaje, Vidas y Tiempo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tvPuntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntos: 0"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvVidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vidas: 3"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo: 10s"
            android:textSize="18sp"/>
    </LinearLayout>

    <!-- Nivel -->
    <TextView
        android:id="@+id/tvNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel 1"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"/>

    <!-- Números a sumar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" + "
            android:textSize="40sp"
            android:layout_marginHorizontal="10sp"/>

        <TextView
            android:id="@+id/tvNum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" = "
            android:textSize="40sp"
            android:layout_marginHorizontal="10sp"/>
    </LinearLayout>

    <!-- Campo de respuesta -->
    <EditText
        android:id="@+id/etRespuesta"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:hint="Respuesta"
        android:textSize="24sp"
        android:gravity="center"/>

    <!-- Botón de verificación -->
    <Button
        android:id="@+id/btnVerificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificar"
        android:layout_marginTop="20dp"/>

</LinearLayout>